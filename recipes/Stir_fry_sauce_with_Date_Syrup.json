{
    "name": "Stir Fry Sauce with Date Syrup",
    "ingredients": [
      {
        "quantity": "2 tbsp",
        "item": "soy sauce",
        "notes": "or tamari for gluten-free option"
      },
      {
        "quantity": "1 tbsp",
        "item": "rice vinegar",
        "notes": "or lime juice"
      },
      {
        "quantity": "1 tbsp",
        "item": "date syrup",
        "notes": "homemade or store-bought"
      },
      {
        "quantity": "1 tsp",
        "item": "toasted sesame oil",
        "notes": ""
      },
      {
        "quantity": "2 tsp",
        "item": "grated ginger",
        "notes": "fresh"
      },
      {
        "quantity": "1 tsp",
        "item": "minced garlic",
        "notes": "fresh"
      },
      {
        "quantity": "1–2 tsp",
        "item": "sriracha or chili garlic sauce",
        "notes": "optional, for heat"
      },
      {
        "quantity": "2 tsp",
        "item": "cornstarch",
        "notes": "optional, for thickening"
      },
      {
        "quantity": "2 tbsp",
        "item": "water",
        "notes": "to mix with cornstarch"
      }
    ],
    "instructions": [
      "In a small bowl, whisk together the soy sauce, rice vinegar, date syrup, sesame oil, ginger, garlic, and sriracha (if using).",
      "If you want to thicken the sauce, dissolve the cornstarch in 2 tbsp water and mix into the sauce.",
      "Pour the sauce over your stir-fried vegetables and tofu in the last few minutes of cooking.",
      "Stir constantly and cook for 1–2 minutes until the sauce thickens and evenly coats the ingredients."
    ]
  }